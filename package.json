{
  "name": "inventory-tracker",
  "version": "1.0.0",
  "description": "Full-stack inventory tracking webapp",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:frontend": "echo 'Using plain JavaScript'",
    "build": "npm run build:backend",
    "build:backend": "tsc -p tsconfig.json",
    "build:frontend": "echo 'Using plain JavaScript - no compilation needed'",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/static": "^6.12.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.6",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}